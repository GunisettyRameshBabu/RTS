@(Html.Kendo().DropDownList()
              .Name("IsManager")
              .DataTextField("Text")
              .DataValueField("Value")
              
              .BindTo(new List<SelectListItem>() {
      new SelectListItem() {
          Text = "Yes",
          Value = "true"
      },
      new SelectListItem() {
          Text = "No",
          Value = "false"
      },
              })
              .Value("#=IsManager#")
              .HtmlAttributes(new { style = "width: 100%" })
)

